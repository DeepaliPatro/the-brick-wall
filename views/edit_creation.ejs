<form action="/creations/<%= creation.id %>" method="post" class="post-it">
    <h2>Edit Creation</h2>
    <input type="hidden" name="_method" value="put" enctype="multipart/form-data">
    <input type="hidden" name="id" value="<%= creation.id %>" />
    <label for="">Title</label>
    <input type="text" name="title" value="<%= creation.title %>">
    <label for="">About</label>
    <textarea name="about" cols="40" rows="5"><%= creation.about %></textarea>
    <input type="file" name="uploadedFile" />
    <button>Post</button>
</form>
